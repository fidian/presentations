{
    "private": true,
    "scripts": {
        "clean": "rm -rf docs && mkdir docs",
        "build": "npm run clean && for F in */index.md; do ( D=${F%index.md}; cd \"$D\"; npm run build-presentation ); done",
        "build-presentation": "cd \"$INIT_CWD\" && reveal-md index.md --static \"../docs/${INIT_CWD##*/}\" --static-dirs .",
        "start": "cd \"$INIT_CWD\" && reveal-md index.md -w"
    },
    "dependencies": {
        "reveal-md": "latest"
    }
}
